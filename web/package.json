{
  "name": "ply-web",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run fonts && npm run styles && rollup -c && npm run monaco-workers",
    "watch": "cross-env VSCODE_PLY_WEB_WATCH='css/style.scss' rollup --watch -c",
    "fonts": "npx mkdirp out/fonts && cp node_modules/@vscode/codicons/dist/codicon.ttf out",
    "styles": "cp node_modules/flowbee/dist/css/style.css out/flowbee.css",
    "editor-worker": "parcel build node_modules/monaco-editor/esm/vs/editor/editor.worker.js --dist-dir out/workers",
    "json-worker": "parcel build node_modules/monaco-editor/esm/vs/language/json/json.worker.js --dist-dir out/workers",
    "yaml-worker": "parcel build node_modules/monaco-yaml/lib/esm/yaml.worker.js --dist-dir out/workers",
    "monaco-workers": "npm run editor-worker && npm run json-worker && npm run yaml-worker"
  },
  "dependencies": {
    "element-plus": "latest",
    "flowbee": "^0.3.1",
    "http-status-codes": "^2.1.4",
    "js-yaml": "^4.1.0",
    "monaco-editor": "^0.29.1",
    "monaco-yaml": "^3.2.1",
    "vue": "next"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/js-yaml": "^4.0.4",
    "@vscode/codicons": "^0.0.25",
    "@vue/compiler-sfc": "latest",
    "eslint": "^8.1.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^8.0.3",
    "mkdirp": "^1.0.4",
    "node-sass": "^7.0.0",
    "parcel": "^2.0.0",
    "rollup": "^2.58.3",
    "rollup-plugin-copy-watch": "^0.0.1",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "typescript": "^4.4.3"
  }
}
