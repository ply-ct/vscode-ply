{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ply extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/extension.js"],
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Ply worker",
      "type": "node",
      "request": "attach",
      "processId": "${command:PickProcess}"
    }
  ]
}
